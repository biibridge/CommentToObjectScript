{
  "name": "commentinobjectscript",
  "displayName": "CommentInObjectScript",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "publisher": "",
  "icon": "./icon/icon.png",
  "repository": {
    "type": "git",
    "url": ""
  },
  "enabledApiProposals": [
    "contribEditorContentMenu"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "objectScript.contextmenu.addComment",
        "title": "%commentinobjectscript.addComment%"
      }
    ],
    "keybindings": [
      {
        "command": "objectScript.contextmenu.addComment",
        "key": "ctrl+shift+c",
        "mac": "ctrl+shift+c",
        "when": "editorTextFocus && editorLangId == objectscript-class"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus && editorLangId == objectscript-class",
          "command": "objectScript.contextmenu.addComment",
          "group": "BBComInObjScriotGroup@1"
        }
      ]
    },
    "configuration": [
      {
        "title": "Creater's Name",
        "properties": {
          "commentinobjectscript.createrName": {
            "type": "string",
            "description": "%commentinobjectscript.createrName%",
            "default": "Creater Name"
          }
        }
      },
      {
        "title": "Class Comment",
        "properties": {
          "commentinobjectscript.commentClass": {
            "type": "string",
            "description": "%commentinobjectscript.classComment%",
            "editPresentation": "multilineText",
            "default": "/// <b>  </b> : ${nowDate} ${nowTime} : ${createrName}<br/>\n/// <br/>\n/// <span style='font-size: small'>Copyright &copy; 2020 default inc. All Rights Reserved.</span>"
          }
        }
      },
      {
        "title": "Method Comment",
        "properties": {
          "commentinobjectscript.commentMethod": {
            "type": "string",
            "description": "%commentinobjectscript.methodComment%",
            "editPresentation": "multilineText",
            "default": "/// Description : ${nowDate} ${nowTime} : ${createrName}<br/>"
          }
        }
      },
      {
        "title": "Add arguments to method comment",
        "properties": {
          "commentinobjectscript.commentMethodAddArguments": {
            "type": "boolean",
            "description": "%commentinobjectscript.addArgument%",
            "default": true
          }
        }
      },
      {
        "title": "Parameter Comment",
        "properties": {
          "commentinobjectscript.commentParameter": {
            "type": "string",
            "description": "%commentinobjectscript.parameterComment%",
            "editPresentation": "multilineText",
            "default": "/// Description : ${nowDate} ${nowTime} : ${createrName}"
          }
        }
      },
      {
        "title": "Property Comment",
        "properties": {
          "commentinobjectscript.commentProperty": {
            "type": "string",
            "description": "%commentinobjectscript.propertyComment%",
            "editPresentation": "multilineText",
            "default": "/// Description : ${nowDate} ${nowTime} : ${createrName}"
          }
        }
      },
      {
        "title": "Index Comment",
        "properties": {
          "commentinobjectscript.commentIndex": {
            "type": "string",
            "description": "%commentinobjectscript.indexComment%",
            "editPresentation": "multilineText",
            "default": "/// Description : ${nowDate} ${nowTime} : ${createrName}"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  }
}
